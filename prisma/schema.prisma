generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubscriptionType {
  monthly
  yearly
  lifetime
}

model Car {
  id           Int           @id @default(autoincrement())
  plateNumber  String        @unique
  tickets      Ticket[]
  subscription Subscription? @relation("CarSubscription")

  @@map("cars")
}

model Ticket {
  id           Int        @id @default(autoincrement())
  entryTime    DateTime   @default(now())
  exitTime     DateTime?
  totalAmount  Float?
  isPaid       Boolean    @default(false)
  carId        Int
  parkingLotId Int
  car          Car        @relation(fields: [carId], references: [id])
  parkingLot   ParkingLot @relation(fields: [parkingLotId], references: [id])

  @@map("tickets")
}

model ParkingLot {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  location        String?
  totalSpots      Int
  occupiedSpots   Int      @default(0)
  pricePerHour    Float    @default(5)
  freeHoursPerDay Int      @default(2)
  tickets         Ticket[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("parking_lots")
}

model Subscription {
  id        Int              @id @default(autoincrement())
  type      SubscriptionType
  startDate DateTime         @default(now())
  endDate   DateTime
  carId     Int              @unique
  car       Car              @relation("CarSubscription", fields: [carId], references: [id])

  @@map("subscriptions")
}
